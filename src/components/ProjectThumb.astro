---
import {
  Image
} from "astro:assets";
import type { Project } from "../pages/index.astro";

const { props } = Astro;

const project: Project = props.project;

console.log(props);


---

<div class="p-4 project-card cursor-pointer relative rounded-xl overflow-hidden flex flex-col gap-4 transition-all duration-300 group hover:translate-y-[-5px] ease-out">
  <div class="thumbnail-wrapper rounded overflow-hidden">
    <Image 
      class="w-full transition-transform duration-500 group-hover:scale-101" 
      src={project.thumbSrc} 
      alt={`Project thumbnail for ${project.title}`} 
    />
  </div>
  
  <div class="project-info">
    <h2 class="text-2xl font-medium tracking-tight text-off-white mb-1 mt-2">{project.title}</h2> 
    <p class="text-off-white text-base">{project.description}</p>
  </div>
  
  <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
</div>

<style>
  .project-card {
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }
</style>
